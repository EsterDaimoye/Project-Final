<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviews"
                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_margin="20dp"
                android:background="@drawable/background_card_menu"
                android:layout_height="200dp"
                app:cardElevation="7dp">

                <ImageView
                    android:id="@+id/fotodetail"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@drawable/matahari"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    tools:ignore="ContentDescription,VisualLintBounds" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ketdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:fontFamily="@font/poppinsregular"
                android:paddingStart="20sp"
                android:text="ketfoto"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText,RtlSymmetry,SmallSp,TextSizeCheck" />

            <TextView
                android:id="@+id/juduldetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsbold"
                android:text="JUDUL"
                android:layout_marginEnd="20sp"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/ketfotodetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:justificationMode="inter_word"
                    android:text="Keterangan"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlSymmetry,TextSizeCheck,UnusedAttribute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:paddingBottom="50dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/shareeeeee"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/fb"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/google"
                        tools:ignore="ContentDescription,RtlHardcoded" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
